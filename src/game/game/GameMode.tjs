Class(GameMode)
{
    var _game;

    Constructor(game:Game) {
        checkArgs
        _game = game;
    }

    Finalize() {}

    Func(initialize)() {}

    Func(pause)() {}

    Func(resume)() {}

    Func(bindWindowEvent)() { _game.bindWindowEvent(...); }
    Func(bindMapWindowEvent)() { _game.bindMapWindowEvent(...); }

    Func(getScreen)() { return _game.getScreen(); }
    Func(releaseScreen)() { _game.releaseScreen(); }
}
