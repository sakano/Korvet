; 汎用
@pmacro name=t time=*
@pmacro name=f fade=*

[macro name=u][update][endmacro]
[macro name=wt][waittrans][endmacro]
[macro name=wact][waitaction][endmacro]
@macro name=sync
	@u
	@wt
	@wact
@endmacro



; 背景コマンドの省略記法
[macro name=道][stage place=道 *][endmacro]
@pmacro name=昼 stime=昼
@pmacro name=夜 stime=夜
@pmacro name=小 size=0
@pmacro name=中 size=1
@pmacro name=大 size=2



; 本編開始

@道 昼 中 f=500
